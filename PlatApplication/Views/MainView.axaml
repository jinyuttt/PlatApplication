<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			   xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
			  xmlns:views="clr-namespace:PlatClient.Views;assembly=PlatClient"
             x:Class="PlatClient.Views.MainView">
	   <Grid RowDefinitions="Auto,*" Background="Transparent" DragDrop.AllowDrop="True">
	
		<idc:DockControl Layout="{Binding Layout}" Margin="4" Grid.Row="1"/>
	</Grid>
</UserControl>
