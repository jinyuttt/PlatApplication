<UserControl  x:Class="AvaloniaRib.Views.MainView"
	xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           
			 xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
			 xmlns:views="clr-namespace:AvaloniaRib.Views;assembly=AvaloniaRib"
             
			 mc:Ignorable="d"  d:DesignWidth="1280" d:DesignHeight="20">
	     <Grid RowDefinitions="Auto,*" Background="Transparent" DragDrop.AllowDrop="True">
		<views:MenuView Grid.Row="0"/>
		<idc:DockControl Layout="{Binding Layout}" Margin="4" Grid.Row="1"/>
	</Grid>
</UserControl>
